<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#fffff1c3">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="juanapp.example.com.kaligtasannijuan.fWhenFlood$PlaceholderFragment">

    <TextView
        android:text="When a Flood is Imminent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wFlood_title"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Be prepared! Pack a bag with important items in case you need to evacuate. Don&apos;t forget to include needed medications."
        android:id="@+id/wFlood_tip1"
        android:layout_marginTop="21dp"
        android:textSize="20dp"
        android:layout_below="@+id/wFlood_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- If advised to evacuate your home, do so immediately."
        android:id="@+id/wFlood_tip2"
        android:layout_below="@+id/wFlood_tip1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- If there is any possibility of a flash flood, move immediately to higher ground."
        android:id="@+id/wFlood_tip3"
        android:layout_below="@+id/wFlood_tip2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- If possible, bring in outdoor furniture and move essential items to an upper floor."
        android:id="@+id/wFlood_tip4"
        android:layout_below="@+id/wFlood_tip3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Turn off utilities at the main switches or valves if instructed to do so. Disconnect electrical appliances."
        android:id="@+id/wFlood_tip5"
        android:textSize="20dp"
        android:layout_below="@+id/wFlood_tip4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/source"
        android:id="@+id/wFlood_source"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/wFlood_tip5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />


</RelativeLayout>
</ScrollView>