<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="juanapp.example.com.kaligtasannijuan.MainMenu$PlaceholderFragment"
    android:background="#fffff1c3">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnEarthquake"
        android:layout_marginTop="53dp"
        android:background="@drawable/img_earthquake"
        android:minHeight="115dp"
        android:minWidth="115dp"
        android:layout_marginLeft="29dp"
        android:onClick="goToEarthquake"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnFlood"
        android:background="@drawable/img_flood"
        android:minWidth="115dp"
        android:minHeight="115dp"
        android:layout_toEndOf="@+id/imgbtnEarthquake"
        android:layout_marginLeft="41dp"
        android:layout_alignTop="@+id/imgbtnEarthquake"
        android:layout_toRightOf="@+id/imgbtnEarthquake"
        android:onClick="goToFlood"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnTsunami"
        android:layout_marginTop="89dp"
        android:background="@drawable/img_tsunami"
        android:minHeight="115dp"
        android:minWidth="115dp"
        android:onClick="goToTsunami"
        android:layout_below="@+id/imgbtnEarthquake"
        android:layout_alignLeft="@+id/imgbtnEarthquake"
        android:layout_alignStart="@+id/imgbtnEarthquake" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnVolcano"
        android:background="@drawable/img_volcano"
        android:minHeight="115dp"
        android:minWidth="115dp"
        android:onClick="goToVolcano"
        android:layout_above="@+id/txtTsunami"
        android:layout_alignLeft="@+id/txtFlood"
        android:layout_alignStart="@+id/txtFlood" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="   Earthquake"
        android:id="@+id/txtEarthquake"
        android:layout_below="@+id/imgbtnEarthquake"
        android:layout_alignRight="@+id/imgbtnEarthquake"
        android:layout_alignEnd="@+id/imgbtnEarthquake"
        android:layout_marginTop="27dp"
        android:layout_alignLeft="@+id/imgbtnEarthquake"
        android:layout_alignStart="@+id/imgbtnEarthquake"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="        Flood"
        android:id="@+id/txtFlood"
        android:layout_alignBottom="@+id/txtEarthquake"
        android:layout_alignLeft="@+id/imgbtnFlood"
        android:layout_alignStart="@+id/imgbtnFlood"
        android:layout_alignRight="@+id/imgbtnFlood"
        android:layout_alignEnd="@+id/imgbtnFlood"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="     Tsunami"
        android:id="@+id/txtTsunami"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/imgbtnTsunami"
        android:layout_alignLeft="@+id/imgbtnTsunami"
        android:layout_alignStart="@+id/imgbtnTsunami"
        android:textAlignment="center"
        android:layout_alignRight="@+id/imgbtnTsunami"
        android:layout_alignEnd="@+id/imgbtnTsunami" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volcanic Eruption"
        android:id="@+id/txtVolcano"
        android:textAlignment="center"
        android:layout_alignTop="@+id/txtTsunami"
        android:layout_alignLeft="@+id/imgbtnVolcano"
        android:layout_alignStart="@+id/imgbtnVolcano" />

</RelativeLayout>
